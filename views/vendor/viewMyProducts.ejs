<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Dashboard</title>
    <meta charset="UTF-8" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />

    <link href="/css/bootstrap.css" rel="stylesheet" />
    <script src="/js/validation.js"></script>
    <link href="/css/vendor.css" rel="stylesheet" />

    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap"
      rel="stylesheet"
    />
    <!--Stylesheet-->
    <link rel="stylesheet" href="/css/vendor-my-products.css" />
  </head>
  <body>
    <div class="background"></div>
    <nav class="navbar bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand ps-4" href="#">
          <h1>AIKIA</h1>
        </a>
      </div>
    </nav>
    <div class="container py-3 h-100">
      <div class="row h-100">
        <div class="col-3 h-100">
          <aside class="d-flex flex-column align-items-center py-4">
            <img
              src="https://picsum.photos/700/700"
              alt="Vendor Profile Image"
              class="profile-image img-fluid px-5"
              style="max-width: 100%; border-radius: 50%"
            />
            <a href="../vendors/logout" class="btn btn-logout">Log Out</a>
            <ul class="list-group pt-3">
              <li class="list-group-item">
                <a href="../vendors/">Dashboard</a>
              </li>
              <li class="list-group-item">
                <a href="product">Add Products</a>
              </li>
              <li class="list-group-item">
                <a href="products">View Products</a>
              </li>
              <li class="list-group-item"><a href="me">My Account</a></li>
            </ul>
          </aside>
          </div>
        <main class="col-9 h-100">
            <section class="py-5 text-center container">
              <div class="row py-lg-5">
                 
                 <div class="col-lg-6 col-md-8 mx-auto">
                      <h1 class="fw-light">My Products</h1>
                      <p class="lead text-body-secondary">
                        View, edit and delete your products here.
                      </p>
                    </div>
                  
                  <div class="input-group mb-3">
                    <input
                      type="text"
                      class="form-control m-0"
                      placeholder="Search for products"
                      aria-describedby="button-addon2"
                    />
                    <button
                      class="btn p-2"
                      type="button"
                      id="button-addon2"
                    >
                      Search
                    </button>
                  </div>
                </section>
          
                <div class="  h-100">
                  <div class="container">
                    <div
                      class="row h-100 row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-5"
                    >
                      <% products.forEach(product => { %>
                      <div class="col h-100">
                        <div class="card shadow-sm">
                          <img
                            class="bd-placeholder-img card-img-top"
                            src="<%= product.image %>"
                            alt="<%= product.name %>"
                          />
                          <div class="card-body">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text"><%= product.description %></p>
                            <p class="card-text">$<%= product.price %></p>
                            <div
                              class="btn-group"
                              role="group"
                              aria-label="Edit and Delete Buttons"
                            >
                              <button
                                type="button"
                                id="<%= product._id%>"
                                class="btn btn-primary edit-button px-1"
                              >
                                Edit
                              </button>
                              <button type="button"   id="<%= product._id%>" class="btn btn-danger px-1">Delete</button>
                            </div>
                          </div>
                        </div>
                      </div>
                      <% }) %>
                    </div>
                  </div>
                </div></div>
               
          </main>
    </div>
    </div>


    <script src="js/bootstrap.bundle.js"></script>
    <script src="js/jquery-3.6.0.min.js"></script>

    <script>
      // JavaScript code to handle the click event on the "Edit" button
      document.querySelectorAll(".edit-button").forEach((button) => {
        button.addEventListener("click", function () {
          const productId = this.id;
          console.log(productId);
          // Redirect to the product form page with the product ID in the URL
          window.location.href = `http://localhost:3000/api/vendors/product/${productId}`;
        });
      });
    </script>
  </body>
</html>
