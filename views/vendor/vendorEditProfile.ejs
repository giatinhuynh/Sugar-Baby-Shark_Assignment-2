<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Dashboard</title>
    <meta charset="UTF-8" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <link href="/css/main.css" rel="stylesheet" />
    <link href="/css/bootstrap.css" rel="stylesheet" />
    <link href="/css/vendor.css" rel="stylesheet" />

    <script src="/js/validation.js"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap"
      rel="stylesheet"
    />
    <!--Stylesheet-->
    <link rel="stylesheet" href="/css/vendor-edit.css" />
  </head>
  <body>
    <div class="background"></div>
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand ps-4" href="#">
            <h1>AIKIA</h1>
          </a>
        </div>
      </nav>
    <div class="container py-3 h-100">
      <div class="row h-100">
        <div class="col-3 h-100">
            <aside class="d-flex flex-column align-items-center py-4">
                <img
                src="/images/profileImages/<%= vendor._id %>.jpg"
                  alt="Vendor Profile Image"
                  class="profile-image img-fluid px-5"
                  style="max-width: 100%; border-radius: 50%"
                />
                <a href="../vendors/logout" class="btn btn-logout">Log Out</a>
                <ul class="list-group pt-3">
                  <li class="list-group-item">
                    <a href="../../vendors/">Dashboard</a>
                  </li>
                  <li class="list-group-item">
                    <a href="../product">Add Products</a>
                  </li>
                  <li class="list-group-item">
                    <a href="../products">View Products</a>
                  </li>
                  <li class="list-group-item"><a href="../me">My Account</a></li>
                </ul>
              </aside>
        </div>
        <div class="col-9 h-100">
          <form class="" method="post" enctype="multipart/form-data">
            <h3>Edit My Profle</h3>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                class="form-control"
                id="username"
                name="username"
                value="<%=vendor.username%>"
                required
              />
            </div>

         
            
            <div class="mb-3">
              <label for="businessName" class="form-label">Business Name</label>
              <input
              type="text"
              class="form-control"
              id="businessName"
              name="businessName"
              value="<%=vendor.businessName%>"
              required
              />
            </div>

            <div class="mb-3">
                <label for="businessAddress" class="form-label">Business Address</label>
                <input
                type="text"
                class="form-control"
                id="businessAddress"
                name="businessAddress"
                value="<%=vendor.businessAddress%>"
                required
                />
              </div>

            <div class="mb-3">
              <label for="productImage" class="form-label">Profile Picture (JPEG/PNG)</label>
              <input
                type="file"
                name="image"
                value="<%=vendor._id%>"
                class="form-control"
                id="productImage"
                accept="image/jpeg, image/png"
                required
              />
            </div>
            <button type="submit" class="btn">
                Save Changes
            </button>
            <a href="../me" class="btn btn-cancel"
            >Cancel</a
          >
        </div>
          </form>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script> $("form").submit(function (event) {
      
        event.preventDefault(); // Prevent the default form submission behavior
        clearErrorStyles();
console.log("edit post");
        // Validate the form data
        const errors = [];
        const businessName = $("[name=businessName]").val();
        const businessAddress = $("[name=businessAddress]").val();
        const username = $("[name=username]").val();
    
        

        if (!validateUsername(username)) {
          errors.push("Invalid username");
          displayErrorMessage(
            "Username must contains only letters (lower and upper case) and digits, 8 to 15 characters.",
            "username"
          );
        }
        if (!validateMinLength(businessAddress, 5)) {
          errors.push("Business address must be at least 5 characters long");
          displayErrorMessage(
            "Business address must be at least 5 characters long",
            "businessAddress"
          );
        }
        if (!validateMinLength(businessName, 5)) {
          errors.push("Business name must be at least 5 characters long");
          displayErrorMessage(
            "Business name must be at least 5 characters long",
            "businessName"
          );
        }

        // If there are errors, prevent form submission
        if (errors.length > 0) {
          return;
        }

        // Add the distributionHub value to the form data
       // Create a FormData object
       const formData = new FormData();

       // Append JSON data to the FormData object
       formData.append("username", $("[name=username]").val());
       formData.append("businessName", $("[name=businessName]").val());
       formData.append("businessAddress", $("[name=businessAddress]").val());
       
       // Append the image file to the FormData object
       formData.append("image", $("#productImage")[0].files[0]);
      
       

       
        // Send the formData to the server using AJAX
        $.ajax({
          url: "edit", // Replace with the correct URL for your server endpoint
          type: "POST",
          processData: false, // Prevent jQuery from processing the data
          contentType: false, // Prevent jQuery from setting the content type
          data: formData,
          success: function (response) {
            // Handle the server's response here (e.g., show success message or redirect)
            alert("Profile updated successfully");
            window.location.href = "../me";
            // You can replace this with your desired action
          },
          error: function (xhr, textStatus, errorThrown) {
            // Handle any errors (e.g., show error message)
            console.error(xhr.responseText);
            alert(xhr.responseText); // You can replace this with your desired error handling
          },
        });
      });</script>
  </body>
</html>
