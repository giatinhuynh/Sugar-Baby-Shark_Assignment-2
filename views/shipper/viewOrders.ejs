


<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Dashboard</title>
    <meta charset="UTF-8" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />

    <link href="/css/bootstrap.css" rel="stylesheet" />
    <link href="/css/shipper.css" rel="stylesheet" />
    <script src="/js/validation.js"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap"
      rel="stylesheet"
    />
    <!--Stylesheet-->
    <style>
      button{
        margin-top: 0 !important;
      }
     
      ul {
        color: black;
        width: 100%;
      }
      ul li {
        padding: 20px !important;
        border: none !important;
      }
      tr th{
        background-color: orange !important;
        
      }
      table{
       border-radius: 10px;
      }
    </style>
  </head>
  <body>
    <div class="background"></div>
    <nav class="navbar bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand ps-4" href="../shippers">
          <h1>AIKIA</h1>
        </a>
      </div>
    </nav>
    <div class="container py-3 h-100">
      <div class="row h-100">
        <div class="col-3 h-100">
          <aside class="d-flex flex-column align-items-center py-4">
            <img
              src="https://picsum.photos/700/700"
              alt="Vendor Profile Image"
              class="profile-image img-fluid px-5"
              style="max-width: 100%; border-radius: 50%"
            />
            <a href="../vendors/logout" class="btn btn-logout">Log Out</a>
            <ul class="list-group pt-3">
              <li class="list-group-item">
                <a href="../shippers/">Dashboard</a>
              </li>
              <li class="list-group-item">
                <a href="orders">View Orders</a>
              </li>

              <li class="list-group-item"><a href="me">My Account</a></li>
            </ul>
          </aside>
        </div>
        <main class="col-9 h-100 px-5">
          <h2 class="col-second__card-title">Order detail</h2>
          <table class=" table table-striped table align-middle table-responsive ">
            <thead>
              <tr>
                <th>Order ID</th>

                <th>Status</th>
                <th>Total</th>
                <th>Customer</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach((item, index) => { %>
              <tr>
                <td><%= item.id %></td>

                <td style="color: darkgreen;"><%= item.status %></td>
                <td>$<%= item.totalPrice %></td>
                <td><%= customerNames[item.id] %></td>
                <td>
                  <button
                    type="button"
                    class="btn btn-primary edit-button"
                    id="<%=item.id%>"
                    data-bs-toggle="modal"
                    data-bs-target="#exampleModal"
                    data-order-index="<%= index %>"
                  >
                    Details
                  </button>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Modal -->
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">
                Modal title
              </h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <div class="row">
                <div class="col mb-1">
                  <p class="small mb-1">Order No.</p>
                  <p id="orderNo">#645385</p>
                </div>
                <div class="col mb-1">
                  <p class="small mb-1">Distribution Hub</p>
                  <p>Ho Chi Minh</p>
                </div>
                <div class="col mb-1">
                  <p class="small mb-1">Date</p>
                  <p>Sep 20, 2023</p>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <label class="small mb-1" for="Status">Status:</label>
                  <select
                    class="custom-select my-1 mr-sm-2"
                    id="Status"
                    name="Status"
                  >
                    <option value="Active" selected>Active</option>
                    <option value="Delivered">Delivered</option>
                    <option value="Canceled">Canceled</option>
                  </select>
                </div>
              </div>
              <hr />
              <p class="small mb-1">Item list</p>
              <div class="row">
                <div class="col">
                  <p>5 Books</p>
                </div>
                <div class="col">
                  <p>20$</p>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <p class="fs-5 text mb-1">Total Price:</p>
                </div>
                <div class="col"></div>
                <div class="col">
                  <p class="fs-5 text mb-1">20$</p>
                </div>
              </div>
              <hr />
              <div class="row">
                <div class="col mb-1">
                  <p class="small mb-1">Receiver</p>
                  <p>Mike James</p>
                </div>
                <div class="col mb-1">
                  <p class="small mb-1">Address</p>
                  <p>Boston, U.S</p>
                </div>
              </div>
              <div class="row">
                <div class="col mb-1">
                  <p class="small mb-1">Payment Method</p>
                  <p>Internet Banking</p>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <button type="button" class="btn btn-primary">
                Save changes
              </button>
            </div>
          </div>
        </div>
      </div>
        </main>
      </div>
    </div>

    <script src="js/bootstrap.bundle.js"></script>
    <script src="js/jquery-3.6.0.min.js"></script>

    <script>
      document.querySelectorAll(".edit-button").forEach((button) => {
        button.addEventListener("click", function () {
          
          const orderId = this.id;
          console.log(orderId);
          // Redirect to the product form page with the product ID in the URL
          window.location.href = `http://localhost:3000/api/shippers/orders/${orderId}`;
        });
      });
    </script>
  </body>
</html>
