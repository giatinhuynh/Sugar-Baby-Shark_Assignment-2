<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order Detail</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />

    <link href="/css/bootstrap.css" rel="stylesheet" />
    <link href="/css/shipper.css" rel="stylesheet" />
    <script src="/js/validation.js"></script>

    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/order-detail.css" />
  </head>
  <body>
    <!-- <h1><%=order._id%></h1>
    <p><%=order.totalPrice%></p>
    <p><%=order.status%></p>
    <p><%=productNames[order.products[0].productId]%></p>
    <p><%=order.products[0].quantity%></p> -->

    <div class="background"></div>
    <nav class="navbar bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand ps-4" href="../shippers">
          <h1>AIKIA</h1>
        </a>
      </div>
    </nav>
    <div class="container py-3 h-100">
      <div class="row h-100">
        <div class="col-3 h-100">
          <aside class="d-flex flex-column align-items-center py-4">
            <img
              src="https://picsum.photos/700/700"
              alt="Vendor Profile Image"
              class="profile-image img-fluid px-5"
              style="max-width: 100%; border-radius: 50%"
            />
            <a href="../vendors/logout" class="btn btn-logout">Log Out</a>
            <ul class="list-group pt-3">
              <li class="list-group-item">
                <a href="../../shippers/">Dashboard</a>
              </li>
              <li class="list-group-item">
                <a href="orders">View Orders</a>
              </li>

              <li class="list-group-item"><a href="me">My Account</a></li>
            </ul>
          </aside>
        </div>
        <main class="col-9 h-100 px-5">
          <h3>Order ID: <%=order._id%></h3>
          <p><strong>Distribution Hub:</strong></p>

          <hr />
          <p><strong>Total price:</strong> $<%=order.totalPrice%></p>
          <% for (let i = 0; i < order.products.length; i++) %>

          <table
            class="table table-striped table align-middle table-responsive"
          >
            <thead>
              <tr>
                <th><strong>Product Name</strong></th>
                <th><strong>Quantity</strong></th>
              </tr>
            </thead>
            <tbody>
              <% for (let i = 0; i < order.products.length; i++) { %>
              <tr>
                <td><%= productNames[order.products[i].productId] %></td>
                <td><%= order.products[i].quantity %></td>
              </tr>
              <% } %>
            </tbody>
          </table>
          <label for="orderStatus">Order Current Status</label>
          <select id="orderStatus" name="orderStatus">
            <option value="active" <%= order.status === 'active' ? 'selected' : '' %>>ACTIVE</option>
            <option value="complete" <%= order.status === 'complete' ? 'selected' : '' %>>COMPLETE</option>
            <option value="cancel" <%= order.status === 'cancel' ? 'selected' : '' %>>CANCEL</option>
          </select>
          
          <a  class="btn btn-primary"
                >Change Status</a
              >
        </main>
      </div>
    </div>

    <script src="js/jquery-3.6.0.min.js"></script>

    <script></script>
  </body>
</html>
